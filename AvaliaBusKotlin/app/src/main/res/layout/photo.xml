<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_foto_registrar"
        android:layout_width="@dimen/photo_evaluation_width"
        android:layout_height="@dimen/photo_evaluation_height"
        android:src="@drawable/ic_image_background" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_delete_image_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_delete_white_24dp"
        app:fabSize="mini" />

</android.support.v7.widget.CardView>